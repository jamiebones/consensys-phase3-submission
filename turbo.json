{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["INFURA_KEY", "PRIVATE_KEY"],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "linea": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "network": {
      "cache": false,
      "persistent": true
    }
  }
}
